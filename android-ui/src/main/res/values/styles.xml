<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- components -->

    <!-- app bar: top -->
    <dimen name="appbarElevation">4dp</dimen>

    <style name="Widget.App.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@animator/appbar_state_list_animator</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextAppearance">?textAppearanceHeadline6</item>
    </style>

    <!-- progressbar -->
    <style name="Widget.App.Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <!-- bottom sheet -->
    <style name="Widget.App.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.BottomSheet</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>