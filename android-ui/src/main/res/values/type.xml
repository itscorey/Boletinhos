    <style name="TextAppearance.App.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/fira_sans</item>
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Only used to represent currencies-->
